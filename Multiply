package main;

public class MyMain {
    public static void main(String[] args) {
        System.out.println(mul(6,5));
        System.out.println(factorial(21));
        System.out.println(Long.MAX_VALUE + " ==> max range for long  ");
    }
    public static int mul(int a, int b){
        if(b == 0){
            return 0;
        }
        else{
            return a + mul(a, b-1);
        }
    }
    public static long factorial(int n){
        if(n == 0){
            return 1;
        }
        else{
            return n * factorial(n-1);
        }
    }
}
